{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "db:generate": { "env": ["DATABASE_URL"], "cache": false },
    "db:migrate": { "env": ["DATABASE_URL"], "cache": false, "persistent": true },
    "db:deploy": { "cache": false },
    "db:seed": { "cache": false },
    "build": {
      "env": ["VERCEL", "DATABASE_URL", "BACKEND_API_URL"],
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".vercel/output/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "env": ["DATABASE_URL", "BACKEND_API_URL"],
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    }
  }
}
