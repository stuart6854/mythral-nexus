generator client {
  provider = "prisma-client-js"
  output   = "./../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id       String    @id @unique @default(cuid())
  name     String    @unique
  projects Project[]
}

model Project {
  id          String     @id @unique @default(cuid())
  name        String     @unique
  description String
  workspaceId String?
  Package     Package[]
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  Resource    Resource[]
}

model Resource {
  id        String    @id @default(cuid())
  name      String    @unique
  type      String
  projectId String
  packageId String[]
  project   Project   @relation(fields: [projectId], references: [id])
  Package   Package[] @relation("PackageToResource")
}

model Package {
  id          String     @id @default(cuid())
  name        String     @unique
  description String
  projectId   String
  project     Project    @relation(fields: [projectId], references: [id])
  resources   Resource[] @relation("PackageToResource")
}
