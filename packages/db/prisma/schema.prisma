generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id String @id @unique @default(cuid())

  name String @unique

  projects Project[]
}

model Project {
  id String @id @unique @default(cuid())

  name        String @unique
  description String

  workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  workspaceId String?
  Resource    Resource[]
  Package     Package[]
}

model Resource {
  id String @id @default(cuid())

  name String @unique

  type String

  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  Package   Package[]
  packageId String[]
}

model Package {
  id String @id @default(cuid())

  name        String @unique
  description String

  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  resources Resource[]
}
