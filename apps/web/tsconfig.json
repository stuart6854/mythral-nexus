{
  "extends": "@mythral/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "app",
    "paths": {
      "@/components/*": [
        "components/*"
      ]
    },
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.css",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
